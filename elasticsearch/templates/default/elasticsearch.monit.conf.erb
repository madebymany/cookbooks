check process elasticsearch with pidfile /var/run/elasticsearch.pid
  start program = "/etc/init.d/elasticsearch start"
    with timeout 60 seconds
  stop program = "/etc/init.d/elasticsearch start"
  if failed host 127.0.0.1 port <%= node['elasticsearch']['port_http'] %> protocol http
    and request '/'
    with timeout 3 seconds for 2 cycles
  then restart
  if cpu > 90% for 5 cycles then restart
  if totalmem > 2 GB for 5 cycles then restart
  if loadavg(5min) greater than 10 for 8 cycles then stop
  if 3 restarts within 5 cycles then timeout
  group elasticsearch

